{
  "version": 2,
  "builds": [
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/dist/**"]
      }
    },
    {
      "src": "yttoolbox/dist/**/*",
      "use": "@vercel/static",
      "config": {
        "distDir": "yttoolbox/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/yttoolbox/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CORS_ORIGIN": "https://www.yttoolbox.com,https://yttoolbox.com"
  }
}
