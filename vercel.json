{
  "version": 2,
  "builds": [
    {
      "src": "yttoolbox/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/src/server.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/yttoolbox/dist/assets/$1"
    },
    {
      "src": "/sw.js",
      "dest": "/yttoolbox/dist/sw.js"
    },
    {
      "src": "/(.*)",
      "dest": "/yttoolbox/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CORS_ORIGIN": "https://www.yttoolbox.com,https://yttoolbox.com"
  }
}
